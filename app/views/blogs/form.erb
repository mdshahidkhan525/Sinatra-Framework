<form action="/blogs/create" method='post'>
  <div class="field">
    <label for="blog_title">Title</label><br>
    <input id="blog_title" name="blog[title]" type="text">
  </div>
  <div class="field">
    <label for="blog_content">Content</label><br>
    <textarea id="blog_content" name="blog[content]"></textarea>
  </div>
  <div class="actions">
    <input type="submit" value="Create Blog">
  </div>
</form>